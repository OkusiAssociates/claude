{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Bash",
      "WebSearch",

      "Bash(/ai/scripts/Okusi/bash-coding-standard/bcs:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(claude mcp:*)",
      "Bash(claude --version)",
      "Bash(dmesg:*)",
      "Bash(dpkg:*)",
      "Bash(echo $HOME)",
      "Bash(echo $XDG_SESSION_TYPE)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(iostat:*)",
      "Bash(journalctl:*)",
      "Bash(last:*)",
      "Bash(ldd:*)",
      "Bash(ls:*)",
      "Bash(lsblk:*)",
      "Bash(lsb_release:*)",
      "Bash(lsmod:*)",
      "Bash(lspci:*)",
      "Bash(mpstat:*)",
      "Bash(node:*)",
      "Bash(npm config:*)",
      "Bash(ok0:*)",
      "Bash(ok1:*)",
      "Bash(ok2:*)",
      "Bash(ok3:*)",
      "Bash(rg:*)",
      "Bash(sensors:*)",
      "Bash(shellcheck:*)",
      "Bash(swapon:*)",
      "Bash(systemctl:*)",
      "Bash(top:*)",
      "Bash(vmstat:*)",

      "Bash(sudo apt-get:*)",
      "Bash(sudo apt-get remove:*)",
      "Bash(sudo apt install:*)",
      "Bash(sudo chown:*)",
      "Bash(sudo journalctl:*)",
      "Bash(sudo -u root:*)",

      "Read(//ai/scripts/en_ID/**)",
      "Read(//ai/scripts/Okusi/bash-coding-standard/**)",
      "Read(//etc/**)",
      "Read(//proc/**)",
      "Read(//run/**)",
      "Read(//usr/lib/node_modules/@anthropic-ai/claude-code/**)",
      "Read(//usr/local/bin/**)",
      "Read(//usr/share/doc/bash/examples/loadables/**)",
      "Read(//usr/share/i18n/locales/**)",
      "Read(//var/crash/**)",
      "Read(//var/log/**)",

      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:modelcontextprotocol.io)",

      "mcp__filesystem__list_directory"
    ],
    "deny": []
  },
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true,
    "explanatory-output-style@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "hookify@claude-code-plugins": true,
    "learning-output-style@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true
  }
}
